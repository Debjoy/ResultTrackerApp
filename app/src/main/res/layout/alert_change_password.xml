<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="20dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/alert_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change password"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_info_black_24dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorText"
            android:layout_alignParentLeft="true"
            android:textStyle="bold"/>
        <ProgressBar
            android:id="@+id/alert_change_password_progress"
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/alert_edit_profile"
            android:visibility="gone"
            android:padding="3dp"/>
        <Button
            android:id="@+id/alert_change_password_cancel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_close_black_24dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorText"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:text="Current Password"/>
        <EditText
            android:id="@+id/alert_change_password_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_box"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorPrimaryLight"
            android:textColorHint="@color/colorPrimarySuperLight"
            android:hint="Enter the current password"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorText"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Password"/>
        <EditText
            android:id="@+id/alert_change_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_box"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/colorPrimaryLight"
            android:textColorHint="@color/colorPrimarySuperLight"
            android:hint="Enter the new password"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/alert_change_password_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change"
            android:layout_marginVertical="20dp"
            android:textColor="@color/colorWhite"
            android:paddingHorizontal="30dp"
            android:drawableLeft="@drawable/ic_lock_black_24dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/colorWhite"
            android:layout_gravity="center"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:stateListAnimator="@null"
            android:background="@drawable/rounded_button_primary_light"/>
    </LinearLayout>

</LinearLayout>