<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/rounded_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/alert_marks_list_marks_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45"
                android:textColor="@color/colorPrimaryLight"
                android:textSize="48sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:elevation="10dp"
                android:outlineAmbientShadowColor="@color/colorBackgroundShadow"
                android:outlineSpotShadowColor="@color/colorBackgroundShadow"
                android:stateListAnimator="@null"
                android:background="@drawable/rounded_button"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:padding="15dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="0dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subject:"
                        android:textColor="@color/colorText"/>
                    <TextView
                        android:id="@+id/alert_marks_list_subject_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Computer Architectue"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorText"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exam:"
                        android:textColor="@color/colorText"/>
                    <TextView
                        android:id="@+id/alert_marks_list_exam_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Internal"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/colorText"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="0dp">
                    <TextView
                        android:id="@+id/alert_marks_list_full_marks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/100"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryLight"/>
                    <Button
                        android:id="@+id/alert_marks_list_delete_marks"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/colorDanger"
                        android:background="@drawable/ic_delete_black_24dp"/>
                    <Button
                        android:id="@+id/alert_marks_list_edit_marks"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/colorPrimaryLight"
                        android:background="@drawable/ic_mode_edit_black_24dp"/>
                </LinearLayout>
             </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>