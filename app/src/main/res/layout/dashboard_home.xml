<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >
    <ScrollView
        android:id="@+id/home_scroll_scrollView"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:paddingBottom="0dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/cardview_default_elevation"
            app:contentPadding="10dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorText"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:text="You have entered a total of"/>
                        <TextView
                            android:id="@+id/home_total_marks_entry_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:textSize="45sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorText"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:text="records"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ProgressBar
                            android:id="@+id/circularProgressbar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:indeterminate="false"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/circular_progress"
                            android:secondaryProgress="100"
                        />
                        <TextView
                            android:id="@+id/circularProgressBar_tv"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:gravity="center"
                            android:text="0%"
                            android:textStyle="bold"
                            android:layout_centerInParent="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="28sp" />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/colorText"
                        android:textStyle="bold"
                        android:text="Overall Average Score Percentage"
                        android:padding="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/cardview_default_elevation"
            app:contentPadding="10dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:drawableLeft="@drawable/ic_insert_chart_black_24dp"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="All marks calculated in \npercentage %"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_centerHorizontal="true"
                    />
                    <Button
                        android:id="@+id/home_chart_reset_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:drawableTint="@color/colorWhite"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rounded_button_primary"
                        android:drawableRight="@drawable/ic_settings_backup_restore_black_24dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/home_line_chart"
                android:layout_width="match_parent"
                android:layout_height="250dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/cardview_default_elevation"
            app:contentPadding="10dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your top 3 best subjects"
                    android:textColor="@color/colorText"
                    android:drawableRight="@drawable/ic_thumb_up_black_24dp"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/colorPrimary"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:id="@+id/home_best_one_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/colorPrimary"
                        android:background="@drawable/ic_looks_one_black_24dp"/>
                    <TextView
                        android:id="@+id/home_best_one_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="Computer Architecture"
                        android:layout_weight="1"
                        android:textColor="@color/colorText"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/home_best_one_marks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="76%"
                        android:background="@drawable/rounded_button_primary"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_best_two_layout"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_looks_two_black_24dp"/>
                    <TextView
                        android:id="@+id/home_best_two_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="Computer Architecture"
                        android:layout_weight="1"
                        android:textColor="@color/colorText"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/home_best_two_marks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="76%"
                        android:background="@drawable/rounded_button_accent"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_best_three_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_looks_3_black_24dp"/>
                    <TextView
                        android:id="@+id/home_best_three_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="Computer Architecture"
                        android:layout_weight="1"
                        android:textColor="@color/colorText"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/home_best_three_marks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="76%"
                        android:background="@drawable/rounded_button_accent"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginRight="5dp"
                        android:paddingVertical="5dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/cardview_default_elevation"
            app:contentPadding="10dp"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="10dp"
                    android:drawableRight="@drawable/ic_thumb_down_black_24dp"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/colorPrimary"
                    android:text="Your top 3 worst subjects"
                    android:textAlignment="center"
                    android:textColor="@color/colorText"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/home_worst_one_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/colorPrimary"
                        android:background="@drawable/ic_looks_one_black_24dp"/>
                    <TextView
                        android:id="@+id/home_worst_one_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="Computer Architecture"
                        android:layout_weight="1"
                        android:textColor="@color/colorText"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/home_worst_one_marks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="76%"
                        android:background="@drawable/rounded_button_primary"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_worst_two_layout"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_looks_two_black_24dp"/>
                    <TextView
                        android:id="@+id/home_worst_two_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="Computer Architecture"
                        android:layout_weight="1"
                        android:textColor="@color/colorText"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/home_worst_two_marks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="76%"
                        android:background="@drawable/rounded_button_accent"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_worst_three_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_looks_3_black_24dp"/>
                    <TextView
                        android:id="@+id/home_worst_three_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:text="Computer Architecture"
                        android:layout_weight="1"
                        android:textColor="@color/colorText"
                        android:textSize="17sp"/>
                    <TextView
                        android:id="@+id/home_worst_three_marks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="76%"
                        android:background="@drawable/rounded_button_accent"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:paddingHorizontal="10dp"
                        android:layout_marginRight="5dp"
                        android:paddingVertical="5dp"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/home_progress_basic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="170dp"
        android:background="@color/colorWhite"
        android:visibility="gone"
        android:indeterminateTint="@color/colorPrimary"/>

</LinearLayout>