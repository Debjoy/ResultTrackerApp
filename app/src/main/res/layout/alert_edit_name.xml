<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/alert_edit_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_info_black_24dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorText"
            android:textStyle="bold"/>
        <ProgressBar
            android:id="@+id/alert_edit_name_progress"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:padding="3dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/alert_edit_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the name here"
        android:minWidth="180dp"
        android:drawableRight="@drawable/ic_mode_edit_black_24dp"
        android:drawablePadding="10dp"
        android:background="@drawable/edit_text_box"
        android:layout_marginVertical="10dp"
        android:layout_marginRight="20dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:textColorHint="@color/colorPrimarySuperLight"
        android:drawableTint="@color/colorPrimary"
        android:textColor="@color/colorPrimaryLight"
        android:text=""/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">
        <Button
            android:id="@+id/alert_edit_name_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:minWidth="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:drawableTint="@color/colorWhite"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="@color/colorDanger"
            android:outlineSpotShadowColor="@color/colorDanger"
            android:stateListAnimator="@null"
            android:background="@drawable/rounded_button_danger"
            android:drawableEnd="@drawable/ic_delete_black_24dp"/>
        <Button
            android:id="@+id/alert_edit_name_update_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:minWidth="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button_primary_light"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Update"
            android:elevation="10dp"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:stateListAnimator="@null"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp"
            android:textColor="@color/colorWhite"/>
        <Button
            android:id="@+id/alert_edit_name_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:minWidth="0dp"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button"
            android:outlineAmbientShadowColor="@color/colorPrimary"
            android:outlineSpotShadowColor="@color/colorPrimary"
            android:elevation="10dp"
            android:layout_marginRight="20dp"
            android:stateListAnimator="@null"
            android:textColor="@color/colorPrimaryLight"
            android:text="Cancel"/>
    </LinearLayout>

</LinearLayout>