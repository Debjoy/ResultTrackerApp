<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/alert_edit_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_info_black_24dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorText"
            android:textStyle="bold"/>
        <ProgressBar
            android:id="@+id/alert_edit_name_progress"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:padding="3dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/alert_edit_name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the name here"
        android:layout_marginBottom="10dp"
        android:minWidth="180dp"
        android:drawableRight="@drawable/ic_mode_edit_black_24dp"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorText"
        android:text=""/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">
        <Button
            android:id="@+id/alert_edit_name_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:minWidth="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableTint="@color/colorWhite"
            android:background="@drawable/rounded_button_danger"
            android:drawableEnd="@drawable/ic_delete_black_24dp"/>
        <Button
            android:id="@+id/alert_edit_name_update_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:minWidth="0dp"
            android:background="@drawable/rounded_button_primary"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"/>
        <Button
            android:id="@+id/alert_edit_name_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:minWidth="0dp"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button_accent"
            android:textColor="@color/colorWhite"
            android:text="Cancel"/>
    </LinearLayout>

</LinearLayout>